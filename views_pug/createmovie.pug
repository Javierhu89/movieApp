<!DOCTYPE html>
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        title JooL
        link(rel="shortcut icon" href="/img/favicon/pelicula.ico")
        link(rel='stylesheet' href='/css/normalize.css')
        link(href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet')
        link(rel='stylesheet' href='/css/style2.css')
    body(class="fondo_c")
        - let estado= value
        if(estado != null)
            h1=estado
        form(action=`/createmovie`, method="POST", id="createform")
            label(for="titulo") Título: 
            input(type="text", name="titulo", id="createtitulo")
            label(for="year") Año: 
            input(type="text", name="year", id="createyear")
            label(for="director") Director: 
            input(type="text", name="director", id="createdirector")
            label(for="genero") Género: 
            input(type="text", name="genero", id="creategenero")
            label(for="duracion") Duración: 
            input(type="text", name="duracion", id="createduracion")
            label(for="escritor") Escritor: 
            input(type="text", name="escritor", id="createescritor")
            label(for="actores") Actores Ppales: 
            input(type="text", name="actores", id="createactores")
            label(for="resumen") Resumen: 
            input(type="text", name="resumen", id="createresumen")
            label(for="premios") Premios: 
            input(type="text", name="premios", id="createpremios")
            label(for="imagen") Url Imagen: 
            input(type="text", name="imagen", id="createurl")
            input(type="submit", value="Guardar" id="guardar_c") 
            form(action=`/movies`, method="GET" id="create")
                input(type="submit" value="Cancelar" id="cancelar_c") 
        script(src="/js/script.js")
   

