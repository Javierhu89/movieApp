<!DOCTYPE html>
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        title JooL
        link(rel="shortcut icon" href="/img/favicon/pelicula.ico")
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(rel='stylesheet' href='/css/normalize.css')
        link(href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet')
        link(rel='stylesheet' href='/css/style2.css')
    body
            if(Rol=="usuario")
                main(id="malef")            
                    header
                        nav.menu
                            ul.menu_items
                                li.active
                                    a(href='/dashboard') Home
                                li
                                    a(href='/movies') Mis Pelis
                                li
                                    form(action='/logout', method='POST', class="logout")
                                        button(type='submit' id='logout_menhamb') Logout
                                li
                                    img(src="/img/avatar/mujerAvatar.png" class="logoD")
                            span.btn_menu.material-icons menu
                    div(class="movies_user")
                        h2(class="h2_m_u") Mis Pelis Favoritas
                        div(class="campos")
                            - let i = 0;
                             while i < Longitud
                                p(class="p")=Details[i].Title
                                p(class="p")=Details[i]
                                p(class="p_año")=Details[i].Year
                                img(src=Details[i].Poster, alt='Imagen de la Película' id="Poster")
                                div(class="boton_m_u")
                                    button(onclick=`location.href ='/searchdetails/${Details[i].imdbID}'` value="detalle_m_u" class="button_m_u") Saber más
                                    button(onclick=`hazdelete('${Details[i++].imdbID}', '/delete_favorito/')` value="quitar" class="quitar") Eliminar
                        div(class="imagen_m_u")
                            //- img(src="/img/fondosPantalla/starw360x640.jpg", alt="" class="foto"              
            else
                main(class="fondo_admin")
                    form(action='/createmovie/' method="GET")   
                        button(type="submit", value="Crear nueva película" id="crear") Crear nueva película
                    form(action='./logout', method='POST', class="logout")
                        button(type='submit' id='logout')
                            img(src="/img/iconosVarios/salidaB.png" id="salida")
                    div(class="favoritas")
                        h1(class="h1_admin") Mis Pelis Almacenadas
                        - let i = 0;
                                while i < Longitud
                                    div(class=`pelicula`)
                                        - let id = identificador[i]
                                        h6=Resultados[i++].Title
                                        div(class="btn_form_m")
                                            form(action=`/editmovie/${id}` , method="GET", id=`editar${i}`)
                                                button(type="submit", value="Editar" class="btn_movies") E
                                            form(action=`/removeMovie/${id}?_method=DELETE`, method="POST", id=`eliminar${i}`, class="eliminar")
                                                button(type="submit", value="X" class="btn_movies") X   
                    form(action='./logout', method='POST')
                        button(type='submit' id='logout_admin')
                            img(src="/img/iconosVarios/salidaB.png" id="salida_admin")
    script(src='https://www.gstatic.com/firebasejs/8.2.4/firebase-app.js')
    script(src='https://www.gstatic.com/firebasejs/8.2.4/firebase-auth.js')
    script(src='https://www.gstatic.com/firebasejs/7.17.2/firebase-firestore.js')
    script(src='/js/autenticacion.js')
    script(src="/js/script.js")


  
  
        