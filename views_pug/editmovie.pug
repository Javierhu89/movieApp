<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=, initial-scale=1.0")
        title Edit Movie
        link(rel="stylesheet" href="/css/style.css")
        link(rel="stylesheet" href="/css/normalize.css")
    body
        form(action=`/editmovie/${identificador}?_method=PUT`, method="POST")
            label(for="titulo") Título: 
            input(type="text", name="titulo", id="editartitulo", value=Resultados[0].titulo)
            br
            label(for="ano") Año: 
            input(type="text", name="ano", id="editaraño", value=Resultados[0].ano)
            br
            label(for="director") Director: 
            input(type="text", name="director", id="editardirector", value=Resultados[0].director)
            br
            label(for="genero") Género: 
            input(type="text", name="genero", id="editargenero", value=Resultados[0].genero)
            br
            label(for="duracion") Duración: 
            input(type="text", name="duracion", id="editarduracion", value=Resultados[0].duracion)
            br
            img(src=Resultados[0].url, alt="Poster de la película")
            br
            input(type="submit", value="Guardar")
        button(onclick="window.history.go(-1)") Cancelar
